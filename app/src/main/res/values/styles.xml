<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/AppTheme.BottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/AppTheme.BottomNavigationView.TextAppearance</item>
    </style>

    <style name="AppTheme.BottomNavigationView.TextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ActionBarOverlay">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/AppTheme.Toolbar.SubtitleTextAppearance</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Toolbar.SubtitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
